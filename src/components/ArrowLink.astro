---
// TODO: se podrr√≠a transformar esto en algo de TailwindCSS
import { classNames } from "~/lib/utils";

export interface Props {
    class?: string;
    href?: string;
}

const { class: klass, href = "#" } = Astro.props as Props;
---

<a class={classNames("flex gap-1 items-center px-1 hover:underline text-right leading-none", klass)} {href}>
    <slot />
    <svg class="flex-shrink-0" width="14" height="14" viewBox="0 0 14 14" fill="none"
        xmlns="http://www.w3.org/2000/svg">
        <path d="M2.5 7H12M12 7L7 2M12 7L7 12" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
    </svg>
</a>

<style lang="scss">
    svg {
        transition: transform 0.2s ease-in-out;
    }

    a:hover svg {
        transform: translateX(calc(-1 * theme("spacing.1")));
    }

    a:active svg {
        transform: translateX(theme("spacing.1"));
    }
</style>